onPrimaryKeyToggle: function (oEvent) {
    var bState = oEvent.getParameter("state"); // true = ON
    var table = this.byId("columnsTable");

    var aItems = table.getItems();
    if (!aItems.length) {
        console.log("No rows available");
        return;
    }

    aItems.forEach(function (row) {
        var cb = row.getCells()[0]; // checkbox column
        cb.setVisible(bState);

        if (!bState) {
            cb.setSelected(false);
        }
    });
}
