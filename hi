// dd/MM/yyyy HH:mm:ss
const dmyTime = str.match(
  /^(\d{2})\/(\d{2})\/(\d{4}) (\d{2}):(\d{2}):(\d{2})$/
);
if (dmyTime) {
  const [, dd, mm, yyyy, hh, mi, ss] = dmyTime;
  const d = new Date(`${yyyy}-${mm}-${dd}T${hh}:${mi}:${ss}`);
  if (!isNaN(d.getTime()))
    return `${yyyy}-${mm}-${dd} ${hh}:${mi}:${ss}`;
}
