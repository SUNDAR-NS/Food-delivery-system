<SegmentedButton
        id="_IDGenButton60"
        selectionChange=".onPrimaryKeyToggle">
        <items>
            <SegmentedButtonItem key="ON" text="Primary Key"/>
            <SegmentedButtonItem key="OFF" text="Off"/>
        </items>
    </SegmentedButton>

onPrimaryKeyToggle: function (oEvent) {
    var sKey = oEvent.getParameter("key"); // ON / OFF
    var bShow = sKey === "ON";

    var table = this.byId("columnsTable");

    table.getItems().forEach(function (row) {
        var cb = row.getCells()[0];
        cb.setVisible(bShow);
        if (!bShow) {
            cb.setSelected(false);
        }
    });
}
