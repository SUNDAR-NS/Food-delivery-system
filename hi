onPrimaryKeyToggle: function (oEvent) {

      this._bPKToggleOn = oEvent.getParameter("state");

      var aItems = this.byId("columnsTable").getItems();

      aItems.forEach(function (oItem) {
        var oCheckBox = oItem.getCells()[0]; // PK checkbox
        if (oCheckBox) {
          oCheckBox.setVisible(this._bPKToggleOn);
          if (!this._bPKToggleOn) {
            oCheckBox.setSelected(false); // clear selection when toggle OFF
          }
        }
      }.bind(this));
    },
