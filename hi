onPrimaryKeyToggle: function (oEvent) {

  // Correct property for ToggleButton
  var bState = oEvent.getParameter("pressed");

  this._bPKToggleOn = bState;

  var oTable = this.byId("columnsTable");
  var aItems = oTable.getItems();

  // Toggle UI class
  oTable.toggleStyleClass("pkModeOn", bState);

  aItems.forEach(function (oItem) {
    var oCheckBox = oItem.getCells()[0];

    if (oCheckBox) {
      oCheckBox.setVisible(bState);

      // Reset selection when turned OFF
      if (!bState) {
        oCheckBox.setSelected(false);
      }
    }
  });
}
